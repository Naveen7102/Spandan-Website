<configuration>
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/spandan.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root Logger -->
    <root level="warn">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- Set log level for specific logs -->
    <logger name="com.spe.spandan.controller.FixturesController" level="info">
        <appender-ref ref="FILE" />
    </logger>
    <logger name="com.spe.spandan.controller.RulesNDateController" level="info">
        <appender-ref ref="FILE" />
    </logger>
    <logger name="com.spe.spandan.controller.SportsController" level="info">
        <appender-ref ref="FILE" />
    </logger>
    <logger name="com.spe.spandan.controller.TeamMembersController" level="info">
        <appender-ref ref="FILE" />
    </logger>
    <logger name="com.spe.spandan.controller.TeamsController" level="info">
        <appender-ref ref="FILE" />
    </logger>
    <logger name="com.spe.spandan.controller.UserController" level="info">
        <appender-ref ref="FILE" />
    </logger>
</configuration>
